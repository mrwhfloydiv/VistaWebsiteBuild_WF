---
import Layout from "../../layouts/Layout.astro";
import { teamBuckets } from "../../data/teams";
import type { Expert } from "../../data/teams";

export function getStaticPaths() {
  return teamBuckets.map((team) => ({
    params: { slug: team.slug },
    props: { team }
  }));
}

const { team } = Astro.props;
const base = import.meta.env.BASE_URL;
const baseWithSlash = base.endsWith("/") ? base : `${base}/`;
const withBase = (path: string) => `${baseWithSlash}${path.startsWith("/") ? path.slice(1) : path}`;
---

<Layout title={`${team.name} | Vista Site Selection`}>
  <section class="section-shell py-14">
    <div class="mb-5 flex items-center gap-3">
      <a href={withBase("/teams")} class="btn-secondary btn-sm">&larr; All teams</a>
      <span class="chip">{team.shortName}</span>
    </div>
    <h1 class="text-5xl md:text-6xl">{team.name}</h1>
    <p class="mt-5 max-w-3xl text-lg text-white/80">{team.summary}</p>
  </section>

  <section class="section-shell grid gap-4 pb-8 lg:grid-cols-2">
    <article class="glass rounded-2xl p-6">
      <h2 class="mb-4 text-3xl">What we do</h2>
      <ul class="space-y-3">
        {
          team.whatWeDo.map((item: string) => (
            <li class="rounded-xl border border-white/12 bg-black/20 px-4 py-3 text-white/90">{item}</li>
          ))
        }
      </ul>
    </article>
    <article class="glass rounded-2xl p-6">
      <h2 class="mb-4 text-3xl">How we help</h2>
      <ol class="space-y-3">
        {
          team.howWeHelp.map((item: string, index: number) => (
            <li class="rounded-xl border border-white/12 bg-black/20 px-4 py-3 text-white/90">
              <span class="mono mr-2 text-white/60">0{index + 1}</span>
              {item}
            </li>
          ))
        }
      </ol>
    </article>
  </section>

  <section class="section-shell pb-8">
    <h2 class="mb-6 text-3xl">The Team</h2>
    <div class="expert-grid">
      {
        team.experts.map((expert: Expert) => (
          <article class="expert-card" style={`--bucket-color:${team.accent};`}>
            <div class="expert-card__photo-wrap">
              <img
                src={withBase(`/headshots/${expert.photo}`)}
                alt={expert.name}
                class="expert-card__photo"
                loading="lazy"
                decoding="async"
              />
              <div class="expert-card__photo-overlay"></div>
            </div>
            <div class="expert-card__body">
              <h3 class="expert-card__name">{expert.name}</h3>
              <p class="expert-card__title">{expert.title}</p>
              <p class="expert-card__specialty">{expert.specialty}</p>
              <p class="expert-card__bio">{expert.bio}</p>
              <div class="expert-card__links">
                {expert.linkedin && (
                  <a href={expert.linkedin} target="_blank" rel="noopener noreferrer" class="expert-card__link">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
                    LinkedIn
                  </a>
                )}
                {expert.email && (
                  <a href={`mailto:${expert.email}`} class="expert-card__link">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="2" y="4" width="20" height="16" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg>
                    Email
                  </a>
                )}
              </div>
            </div>
          </article>
        ))
      }
    </div>
  </section>

  <section class="section-shell pb-18">
    <div class="rounded-2xl border border-white/12 bg-[#1a2328] p-7 md:p-9">
      <h2 class="text-4xl">Need this team in your corner?</h2>
      <p class="mt-3 max-w-2xl text-white/80">
        Get in touch with our {team.name} practice to discuss how we can support your next project.
      </p>
      <div class="mt-6">
        <a href={withBase("/contact")} class="btn-primary">Talk to {team.shortName} team</a>
      </div>
    </div>
  </section>
</Layout>
