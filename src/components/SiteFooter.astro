---
const base = import.meta.env.BASE_URL;
const baseWithSlash = base.endsWith("/") ? base : `${base}/`;
const withBase = (path: string) => `${baseWithSlash}${path.startsWith("/") ? path.slice(1) : path}`;
---

<footer class="mt-24 border-t border-white/10 bg-[#101418] py-10">
  <div class="section-shell flex flex-col gap-6 md:flex-row md:items-center md:justify-between">
    <div class="flex items-center gap-3">
      <img src={withBase("/logos/vista-mark-white.png")} alt="" class="h-9 w-9 object-contain" />
      <div>
        <p class="font-semibold">Vista Site Selection</p>
        <p class="text-sm text-white/65">Location strategy. Incentives. Analytics.</p>
      </div>
    </div>
    <p class="text-sm text-white/65">
      Mock build for redesign planning - {new Date().getFullYear()} Vista Site Selection
    </p>
  </div>
</footer>
